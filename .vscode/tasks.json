{
	"version": "2.0.0",
	"presentation": {
		"reveal": "always",
		"panel": "dedicated"
	},
	"tasks": [
		{
			"type": "shell",
			"label": "CODAL build",
			"command": "python build.py --clean && echo 'Uploading...' && rsync -vh MICROBIT.hex /Volumes/MICROBIT && echo 'Done'",
			"windows": {
				"command": "py build.py"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "CODAL clean build",
			"command": "python build.py --clean",
			"windows": {
				"command": "py build.py --clean"
			},
			"group": {
				"kind": "build",
				"isDefault": false
			}
		}
	]
}
